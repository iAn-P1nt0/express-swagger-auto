{
  "name": "express-swagger-auto",
  "version": "0.1.0",
  "description": "Hybrid OpenAPI 3.x generator for Express.js - zero-config decorators, JSDoc, and runtime capture",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./middleware": {
      "types": "./dist/middleware/index.d.ts",
      "require": "./dist/middleware/index.js",
      "import": "./dist/middleware/index.mjs"
    },
    "./decorators": {
      "types": "./dist/decorators/index.d.ts",
      "require": "./dist/decorators/index.js",
      "import": "./dist/decorators/index.mjs"
    }
  },
  "bin": {
    "express-swagger-auto": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "benchmark": "tsx benchmarks/bench.ts",
    "benchmark:generate-apps": "tsx benchmarks/generate-test-apps.ts",
    "prepare": "pnpm build"
  },
  "keywords": [
    "express",
    "swagger",
    "openapi",
    "api-documentation",
    "typescript",
    "decorators",
    "jsdoc",
    "runtime-capture",
    "zod",
    "joi",
    "yup"
  ],
  "author": "Ian Pinto <ian-p1nt0> (https://github.com/iAn-P1nt0)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iAn-P1nt0/express-swagger-auto.git"
  },
  "bugs": {
    "url": "https://github.com/iAn-P1nt0/express-swagger-auto/issues"
  },
  "homepage": "https://github.com/iAn-P1nt0/express-swagger-auto#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "comment-parser": "^1.4.1",
    "express": "^4.18.0 || ^5.0.0",
    "glob": "^10.3.10",
    "swagger-ui-express": "^5.0.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@babel/parser": "^7.23.9",
    "@types/babel__core": "^7.20.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.56.0",
    "joi": "^17.11.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "yup": "^1.3.3",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "zod": "^3.0.0",
    "joi": "^17.0.0",
    "yup": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    },
    "joi": {
      "optional": true
    },
    "yup": {
      "optional": true
    }
  }
}
